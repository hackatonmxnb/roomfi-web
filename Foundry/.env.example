# RoomFi V2 - Mantle Sepolia Deployment Configuration
# Copy this file to .env and fill in your actual values

# Mantle Sepolia Testnet RPC
# Default public RPC: https://rpc.sepolia.mantle.xyz
MANTLE_SEPOLIA_RPC=https://rpc.sepolia.mantle.xyz

# Private key for deployment (without 0x prefix)
# SECURITY WARNING: Never commit your actual private key to version control
# This account needs MNT tokens for gas fees on Mantle Sepolia
# Get testnet MNT from: https://faucet.sepolia.mantle.xyz
PRIVATE_KEY=your_private_key_here

# Mantle API Key for contract verification
# Get your API key from: https://explorer.sepolia.mantle.xyz/myapikey
# Optional but recommended for contract verification
MANTLE_API_KEY=your_mantle_api_key_here

# Chain configuration (for reference, already in foundry.toml)
MANTLE_SEPOLIA_CHAIN_ID=5003

# Deployment configuration
# Minimum MNT balance required for deployment (in wei)
MIN_DEPLOYMENT_BALANCE=100000000000000000

# Protocol fees (in basis points)
PROTOCOL_FEE_BP=300
LANDLORD_FEE_BP=200
VAULT_PROTOCOL_FEE=30

# Dispute configuration (in USDT, 6 decimals)
DISPUTE_FEE=10000000
ARBITRATOR_STAKE=50000000
